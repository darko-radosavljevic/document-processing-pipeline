# Development Dockerfile for NestJS application
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy source code
COPY . .

# Create uploads directory
RUN mkdir -p ./uploads

# Expose port
EXPOSE 3000

# Start the application in development mode with crypto module enabled
CMD ["npm", "run", "start:dev"] 